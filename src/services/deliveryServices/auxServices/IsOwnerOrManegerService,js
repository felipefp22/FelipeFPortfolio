
export function isOwnerOrManager(requesterID, companyOperationData) {
    const response = false
    
    if (companyOperationData?.ownerID === requesterID) return true;
    if (companyOperationData?.employees && companyOperationData?.employees.some(employee => employee.employeeEmail === requesterID && employee.position === 'MANAGER')) return true;

    return response;
}

export function isOwnerOrManagerOrSupervisor(requesterID, companyOperationData) {
    const response = false
    
    if (companyOperationData?.ownerID === requesterID) return true;
    if (companyOperationData?.employees && companyOperationData?.employees.some(employee => employee.employeeEmail === requesterID && employee.position === 'MANAGER')) return true;
    if (companyOperationData?.employees && companyOperationData?.employees.some(employee => employee.employeeEmail === requesterID && employee.position === 'SUPERVISOR')) return true;

    return response;
}